# ===========================================
# AI-Manager CMS - Caddyfile
# ===========================================

# Configuration globale
{
    # Email pour Let's Encrypt (requis en production)
    # Configurez ACME_EMAIL dans .env avec votre email
    # Si non défini, Caddy essaiera sans email (peut échouer)
    email {$ACME_EMAIL}

    # Mode développement : certificats auto-signés
    # IMPORTANT: Supprimez ou commentez 'local_certs' en production
    # pour activer Let's Encrypt automatique
    local_certs

    # Logs
    log {
        level INFO
        format console
    }
}

# Site principal - Le domaine est configuré via SITE_ADDRESS dans .env
# Exemples : localhost, monsite.com, *.monsite.com
{$SITE_ADDRESS:localhost} {
    # Racine du site
    root * /var/www/html/public

    # Compression
    encode gzip zstd

    # Logs d'accès
    log {
        output file /var/log/caddy/access.log {
            roll_size 10mb
            roll_keep 5
        }
    }

    # Headers de sécurité
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # Assets statiques avec cache long
    @static {
        path *.css *.js *.ico *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # PHP-FPM
    php_fastcgi app:9000 {
        resolve_root_symlink
    }

    # Fichiers statiques
    file_server

    # Fallback Laravel
    try_files {path} {path}/ /index.php?{query}
}

# Health check endpoint (interne)
:8080 {
    respond /health "OK" 200
}
