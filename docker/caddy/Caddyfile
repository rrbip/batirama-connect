# ===========================================
# AI-Manager CMS - Caddyfile
# ===========================================

# Configuration globale
{
    # Mode derrière un reverse proxy (CWP, Apache, Nginx)
    # Quand BEHIND_PROXY=true, Caddy ne gère pas SSL
    # Le proxy externe (CWP/Apache) gère SSL et redirige vers :8080

    # Email pour Let's Encrypt (uniquement si BEHIND_PROXY != true)
    email {$ACME_EMAIL:}

    # Logs
    log {
        level INFO
        format console
    }
}

# Site principal
# Mode 1: Derrière un proxy (CWP/Apache) → écoute sur :80 uniquement
# Mode 2: Accès direct → SITE_ADDRESS avec SSL automatique
:80 {
    # Racine du site
    root * /var/www/html/public

    # Compression
    encode gzip zstd

    # Logs d'accès
    log {
        output file /var/log/caddy/access.log {
            roll_size 10mb
            roll_keep 5
        }
    }

    # Headers de sécurité
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # Assets statiques avec cache long
    @static {
        path *.css *.js *.ico *.gif *.jpg *.jpeg *.png *.svg *.woff *.woff2
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # PHP-FPM
    php_fastcgi app:9000 {
        resolve_root_symlink
        # Passer les headers du proxy pour Laravel
        trusted_proxies private_ranges
    }

    # Fichiers statiques
    file_server

    # Fallback Laravel
    try_files {path} {path}/ /index.php?{query}
}

# Health check endpoint (interne - port différent)
:8081 {
    respond /health "OK" 200
}
